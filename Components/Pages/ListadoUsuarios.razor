@page "/usuarios"
@using TP3MovilFullstack.Models 
@using TP3MovilFullstack.Services 
@inject NavigationManager navigationManager
@inject UserService userService

<PageTitle>Gesti칩n de Usuarios</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-people me-2"></i>
                    Gesti칩n de Usuarios
                </h2>
                <button class="btn btn-success" @onclick="AgregarUsuario">
                    <i class="bi bi-person-plus me-1"></i>
                    Agregar Usuario
                </button>
            </div>
        </div>
    </div>

    @if (usuarios == null || !usuarios.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay usuarios registrados en este momento.
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Vista de Tarjetas (Cards) -->
        <div class="d-block d-lg-none mb-4">
            <h5><i class="bi bi-grid-3x3-gap me-2"></i>Vista de Tarjetas</h5>
            <div class="row">
                @foreach (var usuario in usuarios)
                {
                    <div class="col-md-6 col-12 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="me-3">
                                        @if (!string.IsNullOrWhiteSpace(usuario.ImagenPath))
                                        {
                                            <img src="@usuario.ImagenPath" 
                                                 alt="Foto de @usuario.Nombre" 
                                                 class="rounded-circle" 
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted" 
                                                 style="width: 60px; height: 60px; display: none;">
                                                <i class="bi bi-person" style="font-size: 1.5rem;"></i>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="bi bi-person" style="font-size: 1.5rem;"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="card-title mb-1">@usuario.Nombre</h6>
                                        <p class="card-text text-muted small mb-0">@usuario.Email</p>
                                        <small class="text-muted">ID: #@usuario.Id</small>
                                    </div>
                                </div>
                                <div class="d-grid gap-1">
                                    <button class="btn btn-primary btn-sm" @onclick="() => VerDetalle(usuario.Id)">
                                        <i class="bi bi-eye me-1"></i>Ver Detalle
                                    </button>
                                    <button class="btn btn-outline-warning btn-sm" @onclick="() => EditarUsuario(usuario.Id)">
                                        <i class="bi bi-pencil me-1"></i>Editar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Vista de Tabla (Table) - Solo en pantallas grandes -->
        <div class="d-none d-lg-block">
            <h5><i class="bi bi-table me-2"></i>Vista de Tabla</h5>
            <div class="card shadow">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center" style="width: 80px;">Foto</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Email</th>
                                    <th scope="col" class="text-center" style="width: 80px;">ID</th>
                                    <th scope="col" class="text-center" style="width: 200px;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in usuarios)
                                {
                                    <tr>
                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrWhiteSpace(usuario.ImagenPath))
                                            {
                                                <img src="@usuario.ImagenPath" 
                                                     alt="Foto de @usuario.Nombre" 
                                                     class="rounded-circle" 
                                                     style="width: 40px; height: 40px; object-fit: cover;"
                                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted" 
                                                     style="width: 40px; height: 40px; display: none;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted" 
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <strong>@usuario.Nombre</strong>
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-muted">@usuario.Email</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-secondary">#@usuario.Id</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" @onclick="() => VerDetalle(usuario.Id)" title="Ver detalle">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-warning" @onclick="() => EditarUsuario(usuario.Id)" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" @onclick="() => EliminarUsuario(usuario.Id)" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Total de usuarios: <strong>@usuarios.Count</strong>
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Usuarios>? usuarios;

    protected override void OnInitialized()
    {
        CargarUsuarios();
    }

    private void CargarUsuarios()
    {
        usuarios = userService.GetAll();
    }

    private void AgregarUsuario()
    {
        navigationManager.NavigateTo("/usuario/agregar");
    }

    private void VerDetalle(int id)
    {
        navigationManager.NavigateTo($"/usuario/detalle/{id}");
    }

    private void EditarUsuario(int id)
    {
        navigationManager.NavigateTo($"/usuario/editar/{id}");
    }

    private void EliminarUsuario(int id)
    {
        // Para seguridad, redirigimos al detalle donde est치 el modal de confirmaci칩n
        navigationManager.NavigateTo($"/usuario/detalle/{id}");
    }
}
