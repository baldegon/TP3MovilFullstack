@page "/pelicula"
@using TP3MovilFullstack.Models 
@using TP3MovilFullstack.Services 
@inject NavigationManager navigationManager
@inject PeliculaService peliculaService

<PageTitle>Agregar Película</PageTitle>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Agregar Nueva Película
                    </h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@pelicula" OnValidSubmit="@Grabar">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />
                        
                        <div class="mb-3">
                            <label for="titulo" class="form-label">Título de la Película</label>
                            <InputText @bind-Value="@pelicula.Titulo" class="form-control" id="titulo" placeholder="Ingrese el título" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="anio" class="form-label">Año</label>
                            <InputNumber @bind-Value="@pelicula.Anio" class="form-control" id="anio" placeholder="Año de lanzamiento" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="director" class="form-label">Director</label>
                            <InputText @bind-Value="@pelicula.Director" class="form-control" id="director" placeholder="Nombre del director" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="imagen" class="form-label">Imagen de la Película</label>
                            <InputText @bind-Value="@pelicula.ImagenPath" class="form-control" id="imagen" placeholder="Nombre del archivo (ej: poster.jpg)" />
                            <div class="form-text">
                                Coloca tu imagen en la carpeta <strong>Resources/Images</strong> y escribe solo el nombre del archivo.
                                <br />Archivos disponibles: perro.jpg, dotnet_bot.svg
                            </div>
                            @if (!string.IsNullOrEmpty(pelicula.ImagenPath))
                            {
                                <div class="mt-2">
                                    <label class="form-label">Vista previa:</label>
                                    <div class="border rounded p-2 d-flex align-items-center justify-content-center" style="height: 150px; max-width: 200px; background-color: #f8f9fa;">
                                        <img src="@pelicula.ImagenPath" 
                                             alt="Vista previa de @pelicula.ImagenPath" 
                                             class="img-fluid rounded" 
                                             style="max-height: 100%; max-width: 100%; object-fit: cover;"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                        <div class="text-center text-muted" style="display: none;">
                                            <i class="bi bi-image" style="font-size: 2rem;"></i>
                                            <p class="mt-1 mb-0 small">No encontrada</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary me-md-2" @onclick="Volver">
                                <i class="bi bi-arrow-left me-1"></i>
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i>
                                Guardar Película
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Pelicula pelicula = new Pelicula();

    private void Volver()
    {
        navigationManager.NavigateTo("/peliculas");
    }

    private void Grabar()
    {
        try
        {
            peliculaService.AddPelicula(pelicula);
            navigationManager.NavigateTo("/peliculas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al agregar película: {ex.Message}");
            // Aquí podrías mostrar un mensaje de error al usuario
        }
    }
}
