@page "/usuarios"
@using TP3MovilFullstack.Models
@inject TP3MovilFullstack.Services.UserService UserService
@inject NavigationManager navigationManager

<PageTitle>Usuarios</PageTitle>

<h3>Listado de Usuarios</h3>

@if (usuarios == null || !usuarios.Any())
{
    <p>No hay usuarios registrados.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in usuarios)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(usuario.ImagenPath))
                        {
                            <img src="@usuario.ImagenPath" alt="Imagen de @usuario.Nombre" style="width:50px;height:50px;object-fit:cover;" />
                        }
                    </td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>
                        @if(IsAdmin(CurrentUser))
                        {
                            
                            <button class="btn btn-sm btn-primary me-2" @onclick="() => EditarUsuario(usuario.Id)">
                                <i class="bi bi-pencil"></i>
                            </button>

                            <button class="btn btn-sm btn-secondary me-2" @onclick="() => EliminarUsuario(usuario.Id)">
                                <i class="bi bi-eye"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Usuario? CurrentUser;
    private List<Usuario> usuarios = new();

    private static bool IsAdmin(Usuario? u) =>
        !string.Equals(u?.Rol?.Trim(), "user", StringComparison.OrdinalIgnoreCase);

    protected override void OnInitialized()
    {
        CurrentUser = UserService.CurrentUser ?? UserService.GetAll().FirstOrDefault();
        usuarios = UserService.GetAll();
    }

    private void EditarUsuario(int id)
    {
        navigationManager.NavigateTo($"/perfil/{id}");
    }

    private void EliminarUsuario(int id)
    {

        UserService.DeleteUser(id);
        usuarios = UserService.GetAll();
    }
}
