@inject TP3MovilFullstack.Services.UserService UserService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TP3MovilFullstack</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="peliculas">
                <span class="bi bi-film" aria-hidden="true"></span> Listado Películas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="usuarios">
                <span class="bi bi-people" aria-hidden="true"></span> Usuarios
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="perfil">
                <span class="bi bi-person" aria-hidden="true"></span> Perfil
            </NavLink>
        </div>
        <div class="nav-item px-3 mt-3">
            <button class="btn btn-outline-danger w-100" @onclick="Logout">
                <span class="bi bi-box-arrow-right me-1" aria-hidden="true"></span> Cerrar sesión
            </button>
        </div>
    </nav>
</div>

@code {
    private void Logout()
    {
        UserService.Logout();
        Navigation.NavigateTo("/login", true);
    }
}

